@page
@model invoices_system.Pages.AccountantPastInvoiceModel
@{
    Layout = "_AccountantPastInvoice_Layout2";
}
<body style="background-image: url(../images/compress_actuality_teaser_1.jpeg); background-size:cover; ">
    <div class="right_col" role="main">
        <div class="">
            <div class="row">
                <div class="col-md-12 col-sm-12 ">
                    <div class="x_panel ">
                        <div class="x_content ">
                            <section class="content">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="card">
                                                <div class="body">


                                            <h3> Project Invoices</h3>



                                                    <!-- Basic Examples -->
                                                    <div class="row clearfix">
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                            <div class="card">
                                                                <div class="body">
                                                                    <div class="table-responsive">

                                                                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>Invoice Type</th>
                                                                                    <th>Creation Date</th>
                                                                                    <th>State</th>
                                                                                    <th>Contractor Name</th>
                                                                                    <th>
                                                                                        Disbursement Date
                                                                                    </th>
                                                                                    <th></th>


                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                @for (int i = 0; i < @Model.dt.Rows.Count; i++)
                                                                                {
                                                                                        <tr>
                                                                                            <th scope="row">@i</th>
                                                                                        @for (int j = 0; j < @Model.dt.Columns.Count; j++)
                                                                                        {
                                                                                                    <td>@Model.dt.Rows[i][j]</td>
                                                                                        }
                                                                                            <td>
                                                                                                <a href="#" class="btn btn-info btn-xs"><i class="fa fa-pencil" ></i> Show </a>
                                                                                                <button type="submit" class="btn btn-success"><i class="fa fa-check-circle-o"></i> Approve </button>


                                                                                            </td>

                                                                                        </tr>
                                                                                }








                                                                            </tbody>

                                                                        </table>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


