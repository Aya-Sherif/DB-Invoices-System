                                                                <td>
                                                                    @Model.pojectdt.Rows[0][0]
                                                                </td>
                                                                <th>Location:  </th>
                                                                <td>
                                                                    @Model.pojectdt.Rows[0][2] 



                                                                </td>
                                                                <th>Project ID  </th>
                                                                <td >
                                                         @Model.pojectdt.Rows[0][1]
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <th>Contractor Name </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.invoice.contractorName>
                                                                </td>
                                                                <th> Date  </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.invoice.startDate>
                                                                </td>
                                                                <th> Invoice Type  </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.invoice.invoiceType>
                                                                </td>
                                                                <th> invoice ID  </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.stat.invoiceID />
                                                                </td>                                                                                                                           </td>
                                                            </tr>
