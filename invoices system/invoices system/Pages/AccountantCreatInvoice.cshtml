                                                                <th>Sarf Elta3lyah : </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.WC.SarfElta3lya>
                                                                </td>


                                                                <th> Elta3lyah   </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.invoice.Elta3lya>
                                                                </td>
                                                                <th> Deduction  </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.WC.Deduction>
                                                                </td>
                                                                <th> Loan  </th>
                                                                <td>
                                                                    <input type="text" asp-for=@Model.WC.Loan>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>


                                                    </div>
                                                    <!-- Basic Examples -->
                                                <div class="row clearfix">
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <div class="card">
                                                            <div class="body">
                                                                <div class="table-responsive">
                                                                    <table id="table1" class="table table-bordered table-striped table-hover ">
                                                                            <thead>
                                                                                <tr>
                                                                                </tr>
                                                                                <tr>
                                                                                    <th>#</th>
                                                                                    <th>Statement</th>
                                                                                    <th>Unite</th>
