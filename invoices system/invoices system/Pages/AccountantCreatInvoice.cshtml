                                                                                        <input type="text" asp-for=@Model.stat.Statements>
                                                                                    </td>
                                                                                    <td>
                                                                                        <input type="text" asp-for=@Model.stat.Unit>
                                                                                    </td>
                                                                                    <td>
                                                                                        <input type="text" asp-for=@Model.stat.currentQuantities>
                                                                                    </td>
                                                                                    <td>
                                                                                        <input type="text" asp-for=@Model.stat.currentValue>
                                                                                 </td>

                                                                                 
                                                                            </tbody>
                                                                            }

                                                                        </table>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
