.icon-button img {
  height: 30px;
}

.search-box-container {
  display: flex;
  justify-content: center;
  margin: 10px;
}

.search-box-container input {
  padding: 10px;
  width: 50%;
  border-radius: 5px;
  border: none;
  margin-right: 10px;
}

.search-box-container button {
  background-color:transparent;
  border: none;
  cursor: pointer;
}

.search-box-container button img {
  height: 20px;
}

.recent-searches {
  background-color: #fff;
  margin: 50px auto;
  padding: 20px;
  width: 70%;
  border-radius: 10px;
  box-shadow: 0 0 5px #ccc;
}

.recent-searches h2 {
  font-size: 24px;
  margin-bottom: 10px;
}

.search-boxes {
  display: flex;
  flex-wrap: wrap;
  justify-content:space-around;
  align-items: center;
}

.search-box-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  margin: 10px;
  width: calc(40% - 10px); /* 3 boxes side by side with margin */
  background-color: #f5f5f5;
  border-radius: 5px;
}

.search-box-item p {
  font-size: 16px;
  margin: 0;
}

.delete-button {
  margin-left: 10px;
}

.delete-button img {
  height: 20px;
}

footer {
  text-align: center;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 5px;
  position: absolute;
  bottom: 0;
  width: 100%;
}
