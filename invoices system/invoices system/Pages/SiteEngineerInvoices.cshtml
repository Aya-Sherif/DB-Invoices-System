@page
@model invoices_system.Pages.SiteEngineerInvoicesModel
@{
    Layout = "_SiteEngineerInvoices_Layout2";
}
<div class="right_col" role="main">
    <div class="">


        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">

                    <div class="x_content">
                        <h2> All Invoices   </h2>

                        <div class="row">
                            <div class="col-sm-12">


                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Invoice Type</th>
                                            <th>Creation Date</th>
                                            <th>State</th>
                                            <th>Contractor Name</th>
                                            <th>
                                                Disbursement Date
                                            </th>
                                            <th></th>


                                        </tr>
                                    </thead>


                                    <tbody>
                                        @for (int i = 0; i < @Model.dt.Rows.Count; i++)
                                        {
                                            <tr>
                                                @for (int j = 0; j < (@Model.dt.Columns.Count) - 1; j++)
                                                {
                                                    <td>@Model.dt.Rows[i][j]</td>
                                                }
                                                <td>
                                                    <form method="post">
                                                        <button type="submit" class="btn btn-info btn-xs" asp-page-handler="Show" asp-route-id=@Model.dt.Rows[i][5]><i class="fa fa-pencil"></i> Show </button>


                                                        <button type="submit" class="btn btn-success"><i class="fa fa-check-circle-o"></i> Approve </button>


                                                        <a href="#" class="btn btn-danger btn-xs"> <i class="fa fa-ban"></i>Stop </a>
                                                    </form>
                                                </td>

                                            </tr>
                                        }





                                        </th>
                                        </tr>

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- /page content -->
